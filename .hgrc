# Contains Local non tracked config
# UI Section mostly
%include ~/.hgrc.local

[extensions]
hgext.graphlog = 
hgk=
color=
purge=
hgext.extdiff=
progress=
rebase =
transplant=

[defaults]
# suppress noisy extdiff header message
cdiff = -q

[extdiff]
cmd.vdiff = meld
cmd.cdiff = colordiff
opts.cdiff = -buprN

[diff]
git = 1
showfunc = 1
unified = 8 

[color]
# valid modes are win32, ansi, auto, off
mode = auto

[alias]
exexp = export -o ~/patches/%b_patch%nof%N_%h.patch tip
eximp = import --no-commit 
